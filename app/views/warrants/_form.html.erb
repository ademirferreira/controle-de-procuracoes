<div class="row">
  <div class="col-md-4">
  
    <%= form_with(model: warrant, local: true) do |form| %>
      <% if warrant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(warrant.errors.count, "erro") %> proibiu essa procuração de ser salva:</h2>

          <ul>
            <% warrant.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label "Data de Lavratura:", class: 'label-control' %>
        <%= form.date_field :warrant_date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Livro", class: 'label-control' %>
        <%= form.number_field :book, class: 'form-control' %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= form.label "Folha Inicial:", class: 'label-control' %>
          <%= form.number_field :first_page, class: 'form-control' %>
        </div>

        <div class="form-group col-md-6">
          <%= form.label "Folha Final:", class: 'label-control' %>
          <%= form.number_field :last_page, class: 'form-control' %>
        </div>
      </div>      

      <div class="form-group">
        <%= form.label "Controle", class: 'label-control' %>
        <%= form.text_field :control_number, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Situação" %>
        <%= form.select :situation,
              options_for_select([['Falta assinatura', 'Falta assinatura'], ['Finalizada','Finalizada']]),{},{class: 'form-control'} 
         %>
      </div>

      <div class="form-group">
        <%= form.label "Observação", class: 'label-control' %>
        <%= form.text_area :observation, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Data de Finalização", class: 'label-control' %>
        <%= form.date_field :end_date, class: 'form-control' %>
      </div>

      <div class="btn-toolbar">
        <div class="btn-group mr-2">
          <%= form.submit value: 'Salvar', class: 'btn btn-success' %>        
        </div>
        <div class="btn-group mr-2">
          <%= link_to 'Voltar', warrants_path, class: 'btn btn-primary' %>        
        </div>
      </div>
    <% end %>
  </div>
</div>
