<div class="card w-50">
  <h5 class="card-header">Procuração</h5>
  <div class="card-body">
    <p>
      <strong>Data:</strong>
      <%= @warrant.warrant_date %>
    </p>
    <p>
      <strong>Livro:</strong>
      <%= @warrant.book %>
    </p>
    <p>
      <strong>Página inicial:</strong>
      <%= @warrant.first_page %>
    </p>
    <p>
      <strong>Página final:</strong>
      <%= @warrant.last_page %>
    </p>
    <p>
      <strong>Controle:</strong>
      <%= @warrant.control_number %>
    </p>
    <p>
      <strong>Situação:</strong>
      <%= @warrant.situation %>
    </p>
    <p>
      <strong>Observação:</strong>
      <%= @warrant.observation %>
    </p>
    <p>
      <strong>Data de Finalização:</strong>
      <%= @warrant.end_date %>
    </p>
    <div class="btn-toolbar">
      <div class="btn-group mr-2">
        <%= link_to 'Editar', edit_warrant_path(@warrant), class: 'btn btn-primary'%>       
      </div>
      <div class="btn-group mr-2">
        <%= link_to 'Voltar', warrants_path, class: 'btn btn-info' %>        
      </div>
    </div>

  </div>
</div>

